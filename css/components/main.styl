
* {
	margin 0;
	padding 0
	box-sizing: border-box;
	font-style: normal;
	text-decoration: none;
	outline: none;
	list-style-type: none;
	font-synthesis: none;
  	text-rendering: optimizeLegibility;
  	-webkit-font-smoothing: antialiased;
  	-moz-osx-font-smoothing: grayscale; 
  	font-family: 'Open Sans', sans-serif;
}


html, body {
	height: 100%;
	font-size: font_size;
}

img {
	max-width: 100%;
	width: auto;
	height: auto;
}

.container	{
	max-width: container; 
	padding 0 15px;
	margin 0 auto;
	position relative;
	z-index: 1;
}


.sub_title {
	max-width: 620px;
	margin: 0px auto 40px;
}

p {
	margin-bottom: 10px;
    font-size: 0.9rem;
}

.banner {
	padding: 50px 0;
	&_title {
		font-size: 34px;
		text-transform: uppercase;
		margin-bottom: 10px;
		color: color_p;
	}
	&_descr {
		color: color_p;
		font-size: 18px;
	}
}

@media screen and (min-width: sm) {
	.space-default {
		padding: 70px 0;
	}
}
