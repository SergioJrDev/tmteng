.modal-overlay {
    position: fixed;
    background: rgba(33, 33, 33, 0.74);
    width: 100%;
    height: 100%;
    top: 0;
    z-index: 99;
    display: flex;
    padding: 15px;
    align-items: center;
    .modal {
	    width: 100%;
	    background: #fff;
	    padding: 15px;
        &-title {
            margin-bottom: 15px;
           h2 {
                font-weight: lighter;
                font-size: 2rem;
                color: color_p;
           }
        }
    }
}